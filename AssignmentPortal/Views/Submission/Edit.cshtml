@model Submission

@{
    ViewData["Title"] = "Edit Submission";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-light">
            <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Submission</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AssignmentId" />

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold">Submission Notes</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Update your comments or notes..."></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label for="files" class="form-label fw-semibold">Upload Additional Files</label>
                    <input type="file" name="files" class="form-control" multiple />
                    <small class="text-muted">Optional: You may add or replace files with new uploads.</small>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="bi bi-save me-1"></i> Update
                    </button>
                    <a asp-controller="Submission" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ToastrMessage" />
}
