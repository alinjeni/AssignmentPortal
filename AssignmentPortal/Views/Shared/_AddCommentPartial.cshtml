@model AssignmentComment

<div class="card shadow-sm border-0 mt-4">
    <div class="card-body">
        <h5 class="card-title text-secondary mb-3">Leave a Comment</h5>

        <form asp-action="AddComment" method="post">
            <input type="hidden" asp-for="AssignmentId" />

            <div class="mb-3">
                <label asp-for="Content" class="form-label visually-hidden">Comment</label>
                <textarea asp-for="Content" rows="3" class="form-control" placeholder="Write your comment here..."></textarea>
                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-chat-dots me-1"></i> Post Comment
            </button>
        </form>
    </div>
</div>
